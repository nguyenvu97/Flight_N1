@model List<Backend.Service.ViewModel.ZoneViewModel>
@{
var counter = 0;
}
<div class="row">
    <!-- Table -->
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title">Danh sách</h4>
                <div>
                    <button
                        class="btn btn-sm btn-primary ms-2"
                        onclick='loadModuleModal("@Url.Action("Create")")'>
                        <i class="fa fa-plus"></i>
                        Thêm mới
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive" id="object-list">
                    @if (Model != null && Model.Any())
                    {
                    <table id="add-row" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên</th>
                            <th>Hành động</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                        counter++;
                        <tr data-id="@item.id">
                            <td>@counter</td>
                            <td>@item.name</td>
                            <td>
                                <button type="button" data-bs-toggle="tooltip" title="Edit Task" class="btn btn-link btn-primary btn-lg" data-original-title="Edit Task" onclick="viewEdit(@item.id)">
                                    <i class="fa fa-edit"></i>
                                </button>
                                <button type="button" data-bs-toggle="tooltip" title="Remove" class="btn btn-link btn-danger" data-original-title="Remove" onclick="onDelete(@item.id)">
                                    <i class="fa fa-times"></i>
                                </button>
                            </td>
                        </tr>
                        }
                        </tbody>
                    </table>
                    }
                    else
                    {
                    <div class="alert alert-info text-center">
                        No data available
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/zone.js" defer></script>
