<body>
<div class="container">
    <div class="flex-column justify-content-center container-wraper">
        <!-- header///////////////////////////// -->
        <header class="d-flex justify-content-center header-booking">
            <div class="d-flex  align-items-center header-wraper">
                <div class="header__logo">
                    <img class="header__logo-banner" src="/assets/image/VNA_logo_vn.webp" alt="Logo">
                </div>
                <div class="d-flex header__nav nav-position">
                    <div class="flex-column header__nav-wraper">
                        <ul class="d-flex header__nav-top-item header__nav-top-item-positon">
                            <li class="nav-item">
                                <a href="#">Đăng nhập hoặc đăng ký</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div class="container-fluid body-content-booking">
            @RenderBody()
        </div>


        <footer class="text-white mt-5 p-4 text-center footer-page" style="width: 100%;">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Về chúng tôi</h5>
                        <ul class="list-unstyled">
                            <li>
                                <a href="#" class="text-white">Giới thiệu</a>
